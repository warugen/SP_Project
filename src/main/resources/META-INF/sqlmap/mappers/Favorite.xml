<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Favorite">
	<resultMap type="Favorite" id="FavoriteResult">
		<result property="fcode" column="fcode"/>
		<result property="cid" column="cid"/>
		<result property="pcode" column="pcode"/>
	</resultMap>
	<select id="getWish" resultMap="FavoriteResult">
		SELECT PIMAGE1,PTITLE FROM PRODUCT P, FAVORITE F WHERE P.PCODE=F.PCODE AND CID=#{cid}
	</select>
	<insert id="addWish" parameterType="Favorite">
		INSERT INTO FAVORITE (FCODE,CID,PCODE) VALUES (FAVORITE_SEQ.NEXTVAL,#{cid},#{pcode});
	</insert>
	<delete id="removeWish" parameterType="Favorite">
		DELETE FROM FAVORITE WHERE CID=#{cid} AND FCODE=#{pcode}
	</delete>
	<select id="totalMyWish">
		SELECT COUNT(*) FROM FAVORITE WHERE CID=#{cid}
	</select>
	<select id="totalProductWish">
		SELECT COUNT(*) FROM FAVORITE WHERE PCODE=#{pcode}
	</select>
</mapper>